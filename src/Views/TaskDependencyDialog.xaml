<Window x:Class="TouchGanttChart.Views.TaskDependencyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchGanttChart.Views"
        mc:Ignorable="d"
        Title="Manage Task Dependencies" 
        Height="600" 
        Width="800"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        IsManipulationEnabled="True"
        Background="#f8f9fa">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Touch-optimized button style -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#6c757d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Touch-optimized list item style -->
        <Style x:Key="TouchListItemStyle" TargetType="Border">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f8f9fa"/>
                    <Setter Property="BorderBrush" Value="#adb5bd"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Manage Task Dependencies" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#212529"
                       Margin="0,0,0,8"/>
            <TextBlock Text="{Binding TaskName, StringFormat='Dependencies for: {0}'}"
                       FontSize="16" 
                       Foreground="#6c757d"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Tasks -->
            <Border Grid.Column="0" 
                    Background="White"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#f8f9fa"
                            BorderBrush="#dee2e6"
                            BorderThickness="0,0,0,1"
                            Padding="12">
                        <TextBlock Text="Available Tasks" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#212529"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  IsManipulationEnabled="True"
                                  Padding="8">
                        <ItemsControl ItemsSource="{Binding AvailableTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TouchListItemStyle}"
                                            MouseLeftButtonDown="OnAvailableTaskClick"
                                            Tag="{Binding}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#212529"/>
                                            <TextBlock Text="{Binding DurationDisplay}"
                                                       FontSize="12"
                                                       Foreground="#6c757d"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Row="2"
                            Content="Add Dependency →"
                            Command="{Binding AddDependencyCommand}"
                            Style="{StaticResource TouchButtonStyle}"
                            Background="#28a745"
                            IsEnabled="{Binding HasSelectedAvailableTask}"
                            Margin="8,8,8,12"/>
                </Grid>
            </Border>

            <!-- Current Dependencies -->
            <Border Grid.Column="2" 
                    Background="White"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#f8f9fa"
                            BorderBrush="#dee2e6"
                            BorderThickness="0,0,0,1"
                            Padding="12">
                        <TextBlock Text="Current Dependencies" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#212529"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  IsManipulationEnabled="True"
                                  Padding="8">
                        <ItemsControl ItemsSource="{Binding CurrentDependencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TouchListItemStyle}"
                                            MouseLeftButtonDown="OnCurrentDependencyClick"
                                            Tag="{Binding}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#212529"/>
                                            <TextBlock Text="{Binding DurationDisplay}"
                                                       FontSize="12"
                                                       Foreground="#6c757d"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="This task must complete before the current task can start"
                                                       FontSize="11"
                                                       FontStyle="Italic"
                                                       Foreground="#007bff"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Row="2"
                            Content="← Remove Dependency"
                            Command="{Binding RemoveDependencyCommand}"
                            Style="{StaticResource TouchButtonStyle}"
                            Background="#dc3545"
                            IsEnabled="{Binding HasSelectedCurrentDependency}"
                            Margin="8,8,8,12"/>
                </Grid>
            </Border>

            <!-- Empty State for Dependencies -->
            <StackPanel Grid.Column="2" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasNoDependencies, Converter={StaticResource BoolToVisConverter}}"
                        Margin="20">
                
                <TextBlock Text="🔗" 
                           FontSize="48" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                
                <TextBlock Text="No dependencies" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#6c757d"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Select a task from the left to add a dependency" 
                           FontSize="12"
                           Foreground="#adb5bd"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource TouchButtonStyle}"
                    Background="#6c757d"/>
            
            <Button Content="Save Changes" 
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource TouchButtonStyle}"
                    Background="#007bff"/>
        </StackPanel>
    </Grid>
</Window>