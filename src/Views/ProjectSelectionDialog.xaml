<Window x:Class="TouchGanttChart.Views.ProjectSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchGanttChart.Views"
        mc:Ignorable="d"
        Title="Select Project" 
        Height="600" 
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        IsManipulationEnabled="True"
        Background="#f8f9fa">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Touch-optimized button style -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#6c757d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Project card style -->
        <Style x:Key="ProjectCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#007bff"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Selected project card style -->
        <Style x:Key="SelectedProjectCardStyle" TargetType="Border" BasedOn="{StaticResource ProjectCardStyle}">
            <Setter Property="BorderBrush" Value="#007bff"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#e3f2fd"/>
        </Style>
        
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Select Project" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#212529"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Choose a project to open or create a new one." 
                       FontSize="14" 
                       Foreground="#6c757d"/>
        </StackPanel>

        <!-- Projects List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      IsManipulationEnabled="True"
                      Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Available Projects" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#495057"
                           Margin="8,0,8,8"/>
                           
                <ItemsControl ItemsSource="{Binding Projects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Tag="{Binding}"
                                    MouseLeftButtonDown="OnProjectCardClick">
                                <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource ProjectCardStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.SelectedProject}" Value="{Binding}">
                                                <Setter Property="BorderBrush" Value="#007bff"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="Background" Value="#e3f2fd"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="#212529"
                                               Margin="0,0,0,4"/>
                                               
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                        <Rectangle Width="16" Height="16"
                                                   Fill="{Binding Color}"
                                                   RadiusX="2" RadiusY="2"
                                                   Margin="0,2,8,0"/>
                                        
                                        <Button Content="🗑️" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.DeleteProjectCommand}"
                                                CommandParameter="{Binding}"
                                                Width="32" Height="32"
                                                FontSize="16"
                                                Background="#dc3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Delete Project"
                                                Margin="0,-2,0,0"
                                                Click="OnDeleteButtonClick"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding Description}" 
                                               FontSize="14" 
                                               Foreground="#6c757d"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8"/>

                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                Orientation="Horizontal" 
                                                Margin="0,0,0,8">
                                        <TextBlock Text="Manager: " 
                                                   FontSize="12" 
                                                   Foreground="#495057"/>
                                        <TextBlock Text="{Binding ProjectManager}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#495057"/>
                                        
                                        <TextBlock Text=" • Status: " 
                                                   FontSize="12" 
                                                   Foreground="#495057"
                                                   Margin="16,0,0,0"/>
                                        <TextBlock Text="{Binding Status}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#495057"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                                Orientation="Horizontal">
                                        <TextBlock Text="Start: " 
                                                   FontSize="12" 
                                                   Foreground="#495057"/>
                                        <TextBlock Text="{Binding StartDate, StringFormat='MMM dd, yyyy'}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#495057"/>
                                        
                                        <TextBlock Text=" • End: " 
                                                   FontSize="12" 
                                                   Foreground="#495057"
                                                   Margin="16,0,0,0"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat='MMM dd, yyyy'}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#495057"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- No projects message -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource ProjectCardStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasProjects}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📋" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="No projects available" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="#6c757d"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Create a new project to get started" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Foreground="#6c757d"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Content="New Project" 
                    Command="{Binding NewProjectCommand}"
                    Style="{StaticResource TouchButtonStyle}"
                    Background="#28a745"/>
            
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource TouchButtonStyle}"
                    Background="#6c757d"/>
            
            <Button Content="Open Selected" 
                    Command="{Binding OpenSelectedCommand}"
                    Style="{StaticResource TouchButtonStyle}"
                    IsEnabled="{Binding CanOpenSelected}"/>
        </StackPanel>
    </Grid>
</Window>